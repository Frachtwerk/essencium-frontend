{
  "i18n-ally.localesPaths": ["packages", "packages/app/public/locales"],

  // Enable Tailwind CSS IntelliSense for all packages
  "tailwindCSS.experimental.configFile": "packages/app/src/globals.css",

  // Enable Tailwind CSS IntelliSense in classNames property
  "tailwindCSS.classAttributes": ["class", "className", "classNames"],

  // Enable Tailwind CSS IntelliSense using cn() function
  "tailwindCSS.experimental.classRegex": [
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "conventionalCommits.scopes": ["lib", "app"]
}
