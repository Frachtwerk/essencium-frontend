{
  "root": true,
  "extends": [
    "@frachtwerk/eslint-config-essencium"
  ],
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "ignorePatterns": [
    "next-env.d.ts"
  ],
  "overrides": [
    {
      "files": ["e2e/**/*.ts", "playwright/**/*.ts"],
      "rules": {
        "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
      }
    }
  ]
}